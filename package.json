{
  "name": "star-hybrid",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --win"
  },
  "dependencies": {
    "wait-on": "7.2.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.starfn.starhybrid",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": ".",
        "to": "app",
        "filter": [
          "**/*",
          "!node_modules",
          "!dist",
          "!build"
        ]
      }
    ]
  }
}